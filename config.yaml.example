# Google Drive <-> Obsidian Vault Sync Configuration

# Sync interval in seconds (how often to check for changes)
sync_interval: 300  # 5 minutes

# Google Drive folder ID for Obsidian vault (Account B)
# To get folder ID: Open folder in Google Drive, check URL
# https://drive.google.com/drive/folders/FOLDER_ID_HERE
vault_folder_id: "1abc...xyz"

# File mappings: Google Doc (Account A) <-> Markdown in Vault (Account B)
mappings:
  # Example 1: Daily notes
  - doc_id: "1abcdefghijklmnopqrstuvwxyz"  # Google Doc ID from Account A
    vault_path: "01. Inbox/daily-notes.md"   # Relative path in vault

  # Example 2: AI prompts collection
  - doc_id: "2abcdefghijklmnopqrstuvwxyz"
    vault_path: "02. Prompt/ai-prompts.md"

  # Example 3: Card notes
  - doc_id: "3abcdefghijklmnopqrstuvwxyz"
    vault_path: "03. Card/ideas.md"

  # Example 4: Content ideas
  - doc_id: "4abcdefghijklmnopqrstuvwxyz"
    vault_path: "04. Contend Idea/blog-posts.md"

  # Example 5: Index
  - doc_id: "5abcdefghijklmnopqrstuvwxyz"
    vault_path: "05. Index/main-index.md"

# Add more mappings as needed
# Each mapping syncs one Google Doc with one Markdown file

# Notes:
# - vault_path is relative to the vault root folder in Google Drive
# - Google Doc IDs can be found in the document URL:
#   https://docs.google.com/document/d/DOC_ID_HERE/edit
# - Paths will be created automatically if they don't exist
# - Use forward slashes (/) for paths, even on Windows
